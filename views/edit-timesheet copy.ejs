<!DOCTYPE html>
<html>
<head>
  <title>Edit Timesheet</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>
</head>
<body>
  <%- include('./partials/nav'); %>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Edit Timesheet</h1>
    <div x-data="{
      workType: '<%= timesheet.workType %>',
      workName: '<%= timesheet.workName %>',
      startTime: '<%= new Date(timesheet.startTime).toISOString().slice(0, 16) %>',
      endTime: '<%= new Date(timesheet.endTime).toISOString().slice(0, 16) %>',
      status: '<%= timesheet.status %>',
      message: '',
      updateTimesheet() {
        const timesheetId = '<%= timesheet._id %>';
        const url = `/api/timesheets/${timesheetId}`;

        fetch(url, {
          method: 'PUT',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            workType: this.workType,
            workName: this.workName,
            startTime: this.startTime,
            endTime: this.endTime,
            status: this.status
          })
        })
          .then(response => {
            if (response.ok) {
              window.location.href = '/timesheet';
            } else {
              console.error('Error updating timesheet');
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
      }
    }">
      <form @submit.prevent="updateTimesheet">
        <div class="form-group">
          <label for="workType">Work Type:</label>
          <select class="form-control" id="workType" x-model="workType" required>
            <option value="Development">Development</option>
            <option value="Test">Test</option>
            <option value="Document">Document</option>
          </select>
        </div>
        <div class="form-group">
          <label for="workName">Work Name:</label>
          <input type="text" class="form-control" id="workName" x-model="workName" required>
        </div>
        <div class="form-group">
          <label for="startTime">Start Time:</label>
          <input type="datetime-local" class="form-control" id="startTime" x-model="startTime" required>
        </div>
        <div class="form-group">
          <label for="endTime">End Time:</label>
          <input type="datetime-local" class="form-control" id="endTime" x-model="endTime" required>
        </div>
        <div class="form-group">
          <label for="status">Status:</label>
          <select class="form-control" id="status" x-model="status" required>
            <option value="executed">Executed</option>
            <option value="completed">Completed</option>
            <option value="canceled">Canceled</option>
          </select>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-outline-primary">Update</button>
        </div>
      </form>
      <p class="text-center text-danger mt-3" x-text="message"></p>
    </div>
  </div>
</body>
</html>
