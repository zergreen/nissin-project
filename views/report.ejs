<!DOCTYPE html>
<html>
<head>
  <title>Report Page</title>
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.8.2/dist/alpine.min.js" defer></script>
  <style>
    .table-wrapper {
      max-height: 400px; /* Adjust the height as needed */
      overflow-y: auto;
    }
    .table-wrapper table {
      width: 1500px; /* Adjust the width as needed */
    }
  </style>
</head>
<body>
  <%- include('./partials/nav'); %>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Report Page</h1>
    <div x-data="{
      data: [],
      searchQuery: '',
      selectedRole: '',
      currentPage: 1,
      pageSize: 10,
      sortOrder: 'asc',
      get filteredData() {
        let filtered = this.data;
        if (this.searchQuery) {
          filtered = filtered.filter(item => item.username.toLowerCase().includes(this.searchQuery.toLowerCase()));
        }
        if (this.selectedRole) {
          filtered = filtered.filter(item => item.role === this.selectedRole);
        }
        return filtered;
      },
      get sortedData() {
        return this.filteredData.sort((a, b) => {
          if (this.sortOrder === 'asc') {
            return a.username.localeCompare(b.username);
          } else {
            return b.username.localeCompare(a.username);
          }
        });
      },
      get totalPages() {
        return Math.ceil(this.sortedData.length / this.pageSize);
      },
      get paginatedData() {
        const startIndex = (this.currentPage - 1) * this.pageSize;
        const endIndex = startIndex + this.pageSize;
        return this.sortedData.slice(startIndex, endIndex);
      },
      fetchData() {
        console.log('Fetching data');
        fetch('/api/user')
          .then(response => response.json())
          .then(result => {
            console.log(result);
            this.data = result.data;
          })
          .catch(error => {
            console.error('Error:', error);
          });
      },
      deleteUser(userId) {
        fetch(`/api/user/${userId}`, {
          method: 'DELETE'
        })
          .then(response => {
            if (response.ok) {
              // Remove the deleted user from the data array
              this.data = this.data.filter(user => user._id !== userId);
            } else {
              console.error('Error deleting user');
            }
          })
          .catch(error => {
            console.error('Error:', error);
          });
      },
      editUser(userId) {
        window.location.href = `/edit-user/${userId}`;
      },
      editProfile(userId) {
        window.location.href = `/edit-profile/${userId}`;
      },
      toggleSortOrder() {
        this.sortOrder = this.sortOrder === 'asc' ? 'desc' : 'asc';
      }
    }" x-init="fetchData()">
      <div class="mb-3">
        <input type="text" class="form-control" placeholder="Search by username" x-model="searchQuery">
      </div>
      <div class="mb-3">
        <select class="form-control" x-model="selectedRole">
          <option value="">All Roles</option>
          <option value="user">User</option>
          <option value="admin">Admin</option>
          <option value="superadmin">Super Admin</option>
        </select>
      </div>
      <div class="table-responsive">
        <div class="table-wrapper">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>
                  Username
                  <button class="btn btn-link" @click="toggleSortOrder()">
                    <i class="fas" :class="{'fa-sort-up': sortOrder === 'asc', 'fa-sort-down': sortOrder === 'desc'}">i</i>
                  </button>
                </th>
                <th>Password</th>
                <th>Role</th>
                <th>Actions</th>
                <th>x</th>
                <th>x</th>
                <th>x</th>
                <th>x</th>
                <th>x</th>
                <th>x</th>
                <th>xx</th>
                <th>xx</th>
                <th>xx</th>
                <th>xx</th>
              </tr>
            </thead>
            <tbody>
              <template x-for="item in paginatedData">
                <tr>
                  <td x-text="item.username"></td>
                  <td x-text="item.password"></td>
                  <td x-text="item.role"></td>
                  <td>
                    <button class="btn btn-danger btn-sm mr-2" @click="deleteUser(item._id)">Delete</button>
                    <button class="btn btn-primary btn-sm" @click="editUser(item._id)">Edit</button>
                    <button class="btn btn-primary btn-sm" @click="editProfile(item._id)">Detail</button>
                  </td>
                  <td>xtarst</td>
                  <td>xtars</td>
                  <td>tarstx</td>
                  <td>xtarst</td>
                  <td>tarstx</td>
                  <td>tarstarsx</td>
                  <td>tarstarsx</td>
                  <td>xx</td>
                  <td>txxxxarstarsx</td>
                  <td>taxxrstarsx</td>
                  <td>tarxxxstarsx</td>
                </tr>
              </template>
            </tbody>
          </table>
        </div>
      </div>
      <nav aria-label="Page navigation" class="mt-4">
        <ul class="pagination justify-content-center">
          <li class="page-item" :class="{ 'disabled': currentPage === 1 }">
            <a class="page-link" href="#" @click.prevent="currentPage--">Previous</a>
          </li>
          <template x-for="page in totalPages">
            <li class="page-item" :class="{ 'active': currentPage === page }">
              <a class="page-link" href="#" @click.prevent="currentPage = page" x-text="page"></a>
            </li>
          </template>
          <li class="page-item" :class="{ 'disabled': currentPage === totalPages }">
            <a class="page-link" href="#" @click.prevent="currentPage++">Next</a>
          </li>
        </ul>
      </nav>
      <div class="text-center mt-4">
        <button class="btn btn-secondary" onclick="history.back()">Back</button>
      </div>
    </div>
  </div>
</body>
</html>
